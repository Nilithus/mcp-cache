#!/usr/bin/env bash

# configure
set -e
set -u

# declare variables
p_DIR=$( cd "$( dirname "$0" )" && pwd )
p_DELFILES=(
    "vendor"
    "composer.lock"
)

# script
for i in ${p_DELFILES[@]}
do
    FILE="$p_DIR/../$i"
    EXISTS=$(test -e $FILE && echo 1 || echo 0)
    if [[ $EXISTS -eq "1" ]]; then
        echo "Removing $FILE"
        rm -rf "$FILE"
    fi

done
