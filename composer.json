{
    "name": "ql/mcp-cache",
    "description": "Caching standard for mcp services",
    "homepage": "http://git/mcp/mcp-cache",
    "license": "proprietary",
    "authors": [
        { "name": "IT Team Web Core", "email": "itteamwebcore@quickenloans.com" }
    ],
    "archive": {
        "exclude": [ "/phpunit.xml.dist", "/testing", "/src/Testing" ]
    },
    "autoload": {
        "psr-4": { "MCP\\Cache\\": "src" }
    },

    "require": {
        "php": "~5.6 || ~7.0",
        "ql/mcp-common": "~1.0"
    },

    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "4.*",
        "phpunit/php-invoker": "*",
        "predis/predis": "*",
        "psr/log": "*",
        "ext-apcu": "*"
    },

    "suggest": {
        "predis/predis": "Required if using Redis Cache.",
        "ext-apc": "Required if using APC Cache"
    }
}
